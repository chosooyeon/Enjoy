<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog"></style>

    <style name="exampleToast">
        <item name="colorBackground">#FFCA28</item>
        <item name="textColor">#000</item>
        <item name="iconLeft">@drawable/ic_backup</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">2dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">2dp</item>
    </style>
</resources>
